// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @unique @default(cuid())
  name      String
  emai      String
  avatarUrl String?
  createdAt DateTime @default(now())
  Review    Review[]
}

model Beer {
  id          String   @id @unique @default(cuid())
  name        String   @unique
  description String
  ibu         Int
  note        Int
  review      String
  style       String
  birthDay    String
  imgUrl      String?
  reviews     Review[]
}

model Review {
  id      String  @id @default(cuid())
  imgUrl  String?
  content String
  beerId  String
  user    User    @relation(fields: [userId], references: [id])
  beer    Beer    @relation(fields: [beerId], references: [id])
  userId  String
}
